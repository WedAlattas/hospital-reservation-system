@model hospital_reservation_system.Models.AppointmentConfirmViewModel




<div class="container mt-5">

    <div class="border border-dark rounded-4 p-4">
        <h4 class="text-center fw-bold mb-4">Confirmation</h4>

        <div class="mb-3">
            <div class="fw-bold">@Model.appointment.DoctorName</div>
            <div class="fw-bold">@Model.appointment.SlotTime</div>
        </div>

        <p class="mb-4 fw-bold">
            Please show up before 15 minutes prior of the appointment
        </p>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div id="formError">

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>

        }
        <div class="d-flex justify-content-around mt-4">
            <form asp-controller="Appointment"
                  asp-action="Confirm"
                  asp-route-id="@Model.appointment.Id"
                  method="post"
                  class="d-flex justify-content-around mt-4">
                <button type="submit" class="btn btn-outline-dark">
                    Confirm
                </button>
            </form>

            <a asp-controller="Appointment"
               asp-action="Index"
               class="btn btn-outline-dark d-flex justify-content-around mt-4">
                Cancel
            </a>
        </div>
    </div>
</div>
