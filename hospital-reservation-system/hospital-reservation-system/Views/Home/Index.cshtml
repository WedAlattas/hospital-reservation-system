@model hospital_reservation_system.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "View";
}


@using (Html.BeginForm(
    "Index",
    "Home",
    FormMethod.Post,
    new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }
))
{
    <div class="container mt-5">
        <div class="card border-dark">
            <div class="card-body text-center">

                <h4 class="mb-4 fw-bold">
                    Welcome to Hospital Reservation System v1.0
                </h4>

                <!-- Username Row -->
                <div class="row justify-content-center mb-2">
                    <div class="col-md-6">
                        <div class="row align-items-center">
                            <label class="col-sm-4 col-form-label fw-semibold text-end">
                                Username
                            </label>
                            <div class="col-sm-8">
                                @Html.DropDownList("SelectedUserId", new SelectList(Model.Users, "Id", "UserName"), "-- Select --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.SelectedUserId,"",new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>
            </div>

           
            <!-- Submit -->
            <button type="submit" class="btn btn-outline-dark px-5">
                Submit
            </button>

        </div>
    </div>
</div>
}

